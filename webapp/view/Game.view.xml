<mvc:View
	controllerName="com.game.toep.controller.Game"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:toep="com.game.toep.controls"
	core:require="{
		formatter: 'com/game/toep/model/formatter'
	}">

       <l:FixFlex fixFirst="false">
			<l:flexContent>
				<VBox alignItems="Center" alignContent="Center" width="100%">
					<HBox class="sapUiSmallMarginTop" items="{game>/players}">
						<items>
							<VBox alignItems="Center" class="sapUiSmallMarginBeginEnd">
								<Avatar
									enabled="false"
									backgroundColor="Accent1"
									fallbackIcon="sap-icon://person-placeholder"
									badgeIcon="sap-icon://message-popup"
									showBorder="true"
									displaySize="{= ${device>/system/phone} ? 'M' : 'XL'}"
									press="onPress"/>
								<HBox class="cardsInHand" items="{game>hand/cards}">
									<items>
										<toep:MiniCardControl color=""/>
									</items>
								</HBox>
								<Text
									text="{game>name}"
									class="sapUiTinyMarginTop"/>
							</VBox>
						</items>
					</HBox>
				</VBox>
			</l:flexContent>
			<l:fixContent>
				<VBox alignItems="Center" height="8rem">
					<HBox items="{game>/humanPlayer/hand/cards}">
						<items>
							<toep:CardControl suit="{game>suit}" value="{game>value}"/>
						</items>
					</HBox>
				</VBox>
			</l:fixContent>
		</l:FixFlex>
       
</mvc:View>
